<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/btn_sqlite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="test"/>
    <Button 
        android:id="@+id/btn_sqlite_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="创建"/>
    <Button 
        android:id="@+id/btn_sqlite_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="添加"/>
    <Button 
        android:id="@+id/btn_sqlite_del"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="删除"/>
    <Button 
        android:id="@+id/btn_sqlite_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="修改"/>
    <Button 
        android:id="@+id/btn_sqlite_find"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="查询"/>

</LinearLayout>
